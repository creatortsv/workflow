{
    "name": "creatortsv/workflow",
    "description": "Objects workflow",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Creatortsv\\Workflow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Creatortsv\\Workflow\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "vtsaplin",
            "email": "creatortsv@gmail.com"
        }
    ],
    "require": {
        "php": ">= 7.4 || >= 8.0",
        "league/pipeline": "^1.0.0",
        "symfony/string": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.11"
    },
    "scripts": {
        "test": "php vendor/bin/phpunit -v --testdox --colors=always",
        "test:coverage-text": [
            "@putenv XDEBUG_MODE=coverage",
            "php vendor/bin/phpunit -v --testdox --colors=always --coverage-text --configuration phpunit.xml.dist"
        ]
    }
}
